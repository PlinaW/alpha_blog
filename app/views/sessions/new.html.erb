<h1 class="text-center mt-4">Log in</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">

      <%= form_with(scope: :session, url: login_path, data: { turbo: false }, :class => "shadow p-3 mb-3 bg-dark rounded", local: true) do |f| %>
        <div class="row mb-3 text-light">
            <%= f.label :email,  :class => "col-2 col-form-label"  %><br/>
          <div class="col-10">
            <%= f.text_field :email,  :class => "form-control shadow rounded", placeholder: "Enter your email" %>
          </div>
        </div>
        <div class="row mb-3 text-light">
            <%= f.label :password,  :class => "col-2 col-form-label"  %><br/>
          <div class="col-10">
            <%= f.password_field :password,  :class => "form-control shadow rounded", placeholder: "Enter your password" %>
          </div>
        </div>

        <div class="row justify-content-center">
          <div class="col-2">
            <%= f.submit "Log in", :class => "btn btn-outline-light btn-lg" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="mb-3">
    <%= link_to '[Return to users listing]', users_path, :class => "row justify-content-center text-dark" %>
  </div>
</div>
