<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors_validation', obj: @user%>

      <%= form_with(model: @user, data: { turbo: false }, :class => "shadow p-3 mb-3 bg-dark rounded", local: true) do |f| %>
        <div class="row mb-3 text-light">
            <%= f.label :username, :class => "col-2 col-form-label" %><br/>
          <div class="col-10 ">
            <%= f.text_field :username, :class => "form-control shadow rounded", placeholder: "Username" %>
          </div>
        </div>
        <div class="row mb-3 text-light">
            <%= f.label :email,  :class => "col-2 col-form-label"  %><br/>
          <div class="col-10">
            <%= f.text_field :email,  :class => "form-control shadow rounded", placeholder: "Email" %>
          </div>
        </div>
        <div class="row mb-3 text-light">
            <%= f.label :password,  :class => "col-2 col-form-label"  %><br/>
          <div class="col-10">
            <%= f.password_field :password,  :class => "form-control shadow rounded", placeholder: "Password" %>
          </div>
        </div>
        <div class="row justify-content-center">
          <div class="col-2">
            <%= f.submit  "Sign up", :class => "btn btn-outline-light btn-lg"%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="mb-3">
    <%= link_to '[Return to articles listing]', articles_path, :class => "row justify-content-center text-dark" %>
  </div>
</div>
