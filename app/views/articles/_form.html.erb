<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors_validation'%>

      <%= form_with(model: @article, data: { turbo: false }, :class => "shadow p-3 mb-3 bg-dark rounded", local: true) do |f| %>
        <div class="row mb-3 text-light">
            <%= f.label :title, :class => "col-2 col-form-label" %><br/>
          <div class="col-10 ">
            <%= f.text_field :title, :class => "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>
        <div class="row mb-3 text-light">
            <%= f.label :description,  :class => "col-2 col-form-label"  %><br/>
          <div class="col-10">
            <%= f.text_area :description, rows: 10,  :class => "form-control shadow rounded", placeholder: "Description of article" %>
          </div>
        </div>
        <div class="row justify-content-center">
          <div class="col-2">
            <%= f.submit  :class => "btn btn-outline-light btn-lg"%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="mb-3">
    <%= link_to '[Return to articles listing]', articles_path, :class => "row justify-content-center text-dark" %>
  </div>
</div>
