<div id="page-content">
  <h2 class="text-center mt-4"><%= @article.title %></h2>

  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-body rounded">
          <div class="card-header fst-italic">
            <%= link_to gravatar_for(@article.user, size: 100), user_path(@article.user) %>
            <%= @article.user.username if @article.user%>
          </div>
          <div class="card-body">
            <div class="card-text text-start"><%= simple_format(@article.description)%></div>
            <% if logged_in? && (@article.user == current_user || current_user.admin?) %>
            <!-- <a href="#" class="btn btn-outline-success">View</a> -->
            <%= link_to "Edit", edit_article_path, :class => "btn btn-outline-info"%>
            <!-- <a href="#" class="btn btn-outline-danger">Delete</a> -->
            <%= link_to "Delete", article_path,  data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, :class => "btn btn-outline-danger"%>
            <% end %>
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(@article.created_at) %> ago,
            edited <%= time_ago_in_words(@article.updated_at) %> ago </small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
